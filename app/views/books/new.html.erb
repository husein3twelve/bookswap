<h1>New Book</h1>

<%= form_with model: @book do |form| %>
	<% if form.object.errors.any? %>
		<div>
			<% form.object.errors.full_messages.each do |message| %>
				<div><%= message %></div>
			<% end %>
		</div>
	<% end %>
	<div>
		<%= form.label :title %>
		<%= form.text_field :title %>
	</div>

	<div>
		<%= form.label :author %>
		<%= form.text_field :author %>
	</div>

	<%= form.button %>
<% end %>